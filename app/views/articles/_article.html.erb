<div class="row">
  <div class="card-wapper col s12">
    <div class="card white">
      <div class="card-content black-text">
        <span class="card-title"><%= article.title %></span>
        <p><%= article.body %></p>
      </div>
      <div class="card-action">
        <%= link_to 'SHOW', article_path(article.article_id), method: :get, class: 'waves-effect waves-light btn-small' %>
        
        <% if user_signed_in? && current_user.user_id === article.user.user_id %>
          <%= link_to 'EDIT', edit_article_path(article.article_id), method: :get, class: 'waves-effect waves-light btn-small' %>
          <%= link_to 'DESTROY', article_path(article.article_id), method: :delete, class: 'waves-effect waves-light btn-small' %>
        <% end %>
      </div>
    </div>
  </div>
</div>